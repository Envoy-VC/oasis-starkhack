{
  "extends": "config/typescript/nextjs.json",
  "compilerOptions": {
    /* Bundled projects */
    "incremental": true,
    "skipLibCheck": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [".eslintrc.cjs", "**/*.ts", "**/*.tsx", "**/*.cjs", "**/*.js"],
  "exclude": ["node_modules"]
}
